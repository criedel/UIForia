<UITemplate>
    <Style>

        const trackColor = #b2b2b2aa;

        style scrollview {
            Overflow = scroll;
            ClipBounds = ContentBox;
        }

        style scroll-track {
            BackgroundColor = red; //@trackColor;
            BorderRadius = 3px;
        }

        style scroll-handle {
            BorderRadius = 50%;
            BackgroundColor = grey;
        }

        style transclude {
            // LayoutBehavior = TranscludeChildren;
        }
        
    </Style>

    <Contents style="scrollview">
        
        <define:Children/>
        
        <define:vertical-scrollbar attr:id="vertical-scrolltrack" style="scroll-track" mouse:click="OnClickVertical($event)"/>

        <define:vertical-scrollbar-handle style="scroll-handle" drag:create="OnCreateVerticalDrag($event)"/>
        
        <define:horizontal-scrollbar attr:id="horizontal-scrolltrack" style="scroll-track" mouse:click="OnClickHorizontal($event)"/>

        <define:horizontal-handle style="scroll-handle" drag:create="OnCreateHorizontalDrag($event)"/>

    </Contents>
    
</UITemplate>