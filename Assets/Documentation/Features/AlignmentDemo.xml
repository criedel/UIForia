<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style path="Documentation/Features/AlignmentDemo.style" />
    <Style src="Documentation/Documentation.style" alias="theme" />

    <Using namespace="UIForia.Layout"/>
    
    <Contents>

        <Heading1>Learn all about Alignments here!</Heading1>

        <Group style="property-setters">
            <Group style="property-changer">
                <Heading3>AlignmentTarget</Heading3>
                <Select sync:selectedValue="alignmentTarget" options="alignmentTargets" />
            </Group>
            <Group style="property-changer">
                <Heading3>AlignmentBoundary</Heading3>
                <Select sync:selectedValue="alignmentBoundary" options="alignmentBoundaries" />
            </Group>
        </Group>
        
        <Group style="align-demo-root">
            <Group style="grid-cell">
                <Group style="pointers-none align-left-top" 
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_1'" />
                    <Image style="icon" src="'icon_2'" />
                    <Image style="icon" src="'icon_3'" />
                    <Image style="icon" src="'icon_4'" />
                </Group>
            </Group>

            <Group style="grid-cell">
                <Group style="pointers-none align-top-center"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Div style="center-this">
                        <Image style="icon" src="'icon_2'" />
                        <Image style="icon" src="'icon_6'" />
                        <Image style="icon" src="'icon_3'" />
                        <Image style="icon" src="'icon_8'" />
                    </Div>
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="pointers-none align-top-right"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_3'" />
                    <Image style="icon" src="'icon_1'" />
                    <Image style="icon" src="'icon_2'" />
                    <Image style="icon" src="'icon_9'" />
                </Group>
            </Group>

            <Group style="grid-cell">
                <Group style="pointers-none align-left-center"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_2'" />
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_8'" />
                    <Image style="icon" src="'icon_1'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="pointers-none align-center-center"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_3'" />
                    <Image style="icon" src="'icon_4'" />
                    <Image style="icon" src="'icon_9'" />
                    <Image style="icon" src="'icon_5'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="pointers-none align-right-center"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>

            <Group style="grid-cell">
                <Group style="pointers-none align-left-bottom"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="pointers-none align-center-bottom"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>
            <Group style="grid-cell">
                <Group style="pointers-none align-right-bottom"
                       style:alignmentTargetX="alignmentTarget"
                       style:alignmentTargetY="alignmentTarget"
                       style:alignmentBoundaryY="alignmentBoundary"
                       style:alignmentBoundaryX="alignmentBoundary"
                >
                    <Image style="icon" src="'icon_5'" />
                    <Image style="icon" src="'icon_6'" />
                    <Image style="icon" src="'icon_7'" />
                    <Image style="icon" src="'icon_8'" />
                </Group>
            </Group>
        </Group>
    </Contents>
</UITemplate>