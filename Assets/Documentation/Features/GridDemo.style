style <this> {
    LayoutFitVertical = Fill;
    Padding = 5px;
    BackgroundColor = white;
    PreferredSize = 1pca;
    DistributeExtraSpace = CenterContent;
}

style simple-grid {
    BackgroundColor = seagreen;
    LayoutType = Grid;
    GridLayoutColTemplate = 100px 100px;
    GridLayoutRowTemplate = 100px 100px;
    FitItemsHorizontal = Fill;
    FitItemsVertical = Fill;
    GridLayoutDirection = Vertical;
    GridLayoutColAutoSize = 50px 100px; 
}

style simple-cell {
    BackgroundColor = white;
    Border = 1px;
    BorderColor = black;
    DistributeExtraSpace = CenterContent;
}


