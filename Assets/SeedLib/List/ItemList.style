import "SeedLib/SeedLibTheme.style" as theme;

style item-list {
    PreferredWidth = 1pca;
    Painter = "SeedLib::ItemList";    
}

style item-list-children {
    LayoutType = Grid;
    GridLayoutDirection = Horizontal;
    GridLayoutRowGap = @theme.sp2;
    GridLayoutColAutoSize = 1pca;
    
    [attr:variant="dense"] {
        GridLayoutRowGap = @theme.sp1;
    }
    
    [attr:content-sized] {
        GridLayoutColAutoSize = 1mx;
    }
}
