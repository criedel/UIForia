import "SeedLib/SeedLibTheme.style" as theme;

style button {

    BorderRadius = 50%;
    PaddingLeft = @theme.sp3;
    PaddingRight = @theme.sp3;
    PaddingTop = @theme.sp1;
    PaddingBottom = @theme.sp1;
    TextColor = white;
    TextFontAsset = @theme.GothamRound;
    DistributeExtraSpace = CenterContent;
    TextAlignment = Center;
    TextFontSize = 16px;
    Margin = @theme.sp4;
    TextTransform = UpperCase;
    [attr:configuration="label+icon"] {
        LayoutType = Grid;
        GridLayoutColTemplate = 1mx 1mx;
        GridLayoutDirection = Horizontal;
        GridLayoutColGap = @theme.sp1;
    }
    
    [attr:configuration="label-only"] {
    
    }
     
    [attr:configuration="icon-only"] {
        Padding = @theme.sp1;
    }
    
    [attr:disabled] {
        Opacity = 0.4;
        PointerEvents = None;
    }
    
    [attr:variant="Primary"] {
        BackgroundColor = @theme.poppy500;
        [hover] {
            Border = 2px;
            BorderColor = @theme.poppy700;
        }
        
        [active] {
            BackgroundColor = @theme.poppy700;
        }
        
        [focus] {
            Border = 2px;
            BorderColor = @theme.poppy700;
            ShadowColor = @theme.poppy500;
            ShadowSizeX = 2;
            ShadowSizeY = 2;
            ShadowOffsetY = 1;
            ShadowIntensity = 5;
        }
    }
    
    [attr:variant="Secondary"] {

        BackgroundTint = @theme.coal600;
        BackgroundColor = @theme.coal100;
        TextColor = @theme.coal600;
        
        [hover] {
            Border = 2px;
            BorderColor = @theme.coal300;
        }
    
        [active] {
            BackgroundColor = @theme.coal300;
            TextColor = white;
            BackgroundTint = white;
        }
        
        [focus] {
            Border = 2px;
            BorderColor = @theme.coal300;
            ShadowColor = @theme.poppy500;
            ShadowSizeX = 2;
            ShadowSizeY = 2;
            ShadowOffsetY = 1;
            ShadowIntensity = 5;
        }
    }

}

style text {
    PaddingTop = 2px;
}

style icon {
    PreferredSize = 16px;
}