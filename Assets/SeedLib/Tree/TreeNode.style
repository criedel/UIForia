import "SeedLib/SeedLibTheme.style" as theme;

style tree-node {
    PaddingLeft = 24px;
    DistributeExtraSpaceVertical = CenterContent;
    PreferredWidth = 1pca;
    MarginBottom = @theme.sp2;
    
    [attr:dense="true"] {
        MarginBottom = @theme.sp1;
    }
}

style tree-node-children {
    FlexLayoutDirection = Horizontal;
    DistributeExtraSpaceHorizontal = BeforeContent;
    DistributeExtraSpaceVertical = CenterContent;
    FlexItemGrow = 1;
    AlignY = 50% Parent;
}