<UITemplate>

    <Style src="SeedLib/SeedLibTheme.style"/>
    <Style src="SeedLib/SeedLibRoot.style"/>

    <Style>
        style small-padded {
            Padding = 8px;
        }
        
        style horizontal {
            FlexLayoutDirection = Horizontal;
        }

    </Style>
    <Contents style="root">

        <ScrollView style="scroll">

            <override:Children style="padded">
                
                <Group style="margin-tb" style:PreferredWidth="300">
                    SearchBox
                    <SearchBox placeholder="'Search the wiki...'" 
                               onChange:searchTerm="OnSearchTermChanged($newValue)" 
                               sync:searchResults="searchResults"
                               onChange:selectedSearchResult="OnSelectedSearchResult($newValue)"
                    />
                    SearchBox (Disabled)
                    <SearchBox placeholder="'Search the wiki...'" attr:disabled="true"/>
                </Group>

                <Group style="margin-tb" style:PreferredWidth="300">
                    Tree
                    <Group style="horizontal">
                        <Group style:BackgroundColor="UnityEngine.Color.white" style:MarginRight="16">
                            Default
                            <Separator/>
                            <Repeat list="categories">

                                <Foldout title="$item.name">
                                    <Repeat list="$item.resources" style="transclude" var:resource="item">

                                        <TreeFoldout icon="'Icons/success'" title="$resource.name">

                                            <override:Title>
                                                {$title}
                                                <Text style="h6">{TotalResourceCount($resource)}</Text>
                                            </override:Title>

                                            <Repeat list="$resource.containers" style="transclude" var:container="item">
                                                <TreeNode icon="'Icons/success'" title="$container.name">
                                                    <Text style="h6">{$container.count}</Text>
                                                </TreeNode>
                                            </Repeat>

                                        </TreeFoldout>

                                    </Repeat>

                                </Foldout>

                            </Repeat>
                        </Group>

                        <Group style:BackgroundColor="UnityEngine.Color.white" style:MarginRight="16">
                            Dense
                            <Separator/>
                            <Repeat list="categories">

                                <Foldout title="$item.name" attr:variant="dense">
                                    <Repeat list="$item.resources" style="transclude" var:resource="item">

                                        <TreeFoldout icon="'Icons/success'" title="$resource.name" attr:variant="dense">

                                            <override:Title>
                                                {$title}
                                                <Text style="h6">{TotalResourceCount($resource)}</Text>
                                            </override:Title>

                                            <Repeat list="$resource.containers" style="transclude" var:container="item">
                                                <TreeNode icon="'Icons/success'" title="$container.name">
                                                    <Text style="h6">{$container.count}</Text>
                                                </TreeNode>
                                            </Repeat>

                                        </TreeFoldout>

                                    </Repeat>

                                </Foldout>

                            </Repeat>
                        </Group>
                        
                        <Group style:BackgroundColor="UnityEngine.Color.white" style:MarginRight="16" >
                            Striped
                            
                            <Repeat list="categoriesBig">
                                <Separator />
                                <Foldout title="$item.name" style="striped-tree">
                                    <Repeat list="$item.resources" style="transclude" var:resource="item">
    
                                        <TreeFoldout icon="'Icons/success'" title="$resource.name">
    
                                            <override:Title>
                                                {$title}
                                                <Text style="h6">{TotalResourceCount($resource)}</Text>
                                            </override:Title>
    
                                            <Repeat list="$resource.containers" style="transclude" var:container="item">
                                                <TreeNode icon="'Icons/success'" title="$container.name">
                                                    <Text style="h6">{$container.count}</Text>
                                                </TreeNode>
                                            </Repeat>
    
                                        </TreeFoldout>
    
                                    </Repeat>
    
                                </Foldout>
                            </Repeat>
                            
                        </Group>

                        <Group style:BackgroundColor="UnityEngine.Color.white" style:MarginRight="16">
                            Dense+Striped
                            <Separator/>
                            <Repeat list="categoriesBig" >
                                <Foldout title="$item.name" attr:variant="dense" style="striped-tree">

                                        <!-- Alternative Tree layout idea -->
<!--                                    <RepeatFoldout list="categoriesBig">-->
<!--                                        <RepeatTreeFoldout list="$item.resources">-->

<!--                                            <override:Title>-->
<!--                                                {$title}-->
<!--                                                <Text style="h6">{TotalResourceCount($resource)}</Text>-->
<!--                                            </override:Title>-->

<!--                                            <Repeat list="$resource.containers" style="transclude" var:container="item">-->
<!--                                                <TreeNode icon="'Icons/success'" title="$container.name">-->
<!--                                                    <Text style="h6">{$container.count}</Text>-->
<!--                                                </TreeNode>-->
<!--                                            </Repeat>-->

<!--                                        </RepeatTreeFoldout>    -->
<!--                                    </RepeatFoldout>-->
                                    
                                    
                                    <Repeat list="$item.resources" style="transclude" var:resource="item">
                                        <TreeFoldout icon="'Icons/success'" title="$resource.name" attr:variant="dense+striped">

                                            <override:Title>
                                                {$title}
                                                <Text style="h6">{TotalResourceCount($resource)}</Text>
                                            </override:Title>

                                            <Repeat list="$resource.containers" style="transclude" var:container="item">
                                                <TreeNode icon="'Icons/success'" title="$container.name">
                                                    <Text style="h6">{$container.count}</Text>
                                                </TreeNode>
                                            </Repeat>

                                        </TreeFoldout>

                                    </Repeat>

                                </Foldout>
                            </Repeat>
                            
                        </Group>
                    </Group>
                </Group>

                <Div style:BackgroundColor="UnityEngine.Color.white" style="small-padded margin-tb">
                    
                <ContextMenu registry="contextMenuRegistry"/>
                
                </Div>
                <Group style="margin-tb">

                    <Button style:MarginLeft="500" attr:id="popover-button" label="'Show Popover'"/>

                    <Popover edge="SeedLib.PopOverEdge.Left" targetElement="FindById('popover-button')">
                        Content here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                    </Popover>

                </Group>
                <Group style="margin-tb">

                    <Button style:MarginLeft="500" attr:id="popover-button-1" label="'Show Popover'"/>

                    <Popover edge="SeedLib.PopOverEdge.Right" targetElement="FindById('popover-button-1')">
                        Content here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                        <Div style="margin-tb"></Div>
                        More here
                    </Popover>

                </Group>

                <Button style:TransformPositionX="-30" style:MarginBottom="300" attr:id="popover-button-2" label="'Show Popover but this one is longer hopefully they center'"/>

                <Popover edge="SeedLib.PopOverEdge.Top" targetElement="FindById('popover-button-2')">
                    <Slider showTrail.once="true" rangeStart.once="0" rangeEnd.once="10" stepSize.once="2" value.once="7.6f"/>

                </Popover>
                <Popover edge="SeedLib.PopOverEdge.Bottom" targetElement="FindById('popover-button-2')">
                    Content here
                    <Div style="margin-tb"></Div>
                    More here and this is really long
                    <Div style="margin-tb"></Div>
                    More here and this is really long
                    <Div style="margin-tb"></Div>
                    More here and this is really long
                    <Div style="margin-tb"></Div>
                    More here
                </Popover>

                <Group style="m4">
                    <Div style:PreferredWidth="200">
                        Input Field
                        <InputField sync:value="inputText"/>
                        Input Field (Disabled)
                        <InputField sync:value="inputText" attr:disabled="true"/>
                        Input Field (Placeholder)
                        <InputField sync:value="inputText2" placeholder="'Placeholder'"/>
                    </Div>
                </Group>

                <Group style="m4">
                    <Div style:PreferredWidth="200">
                        Input stepper
                        <InputStepper min="1" max="50" sync:value="stepperValue" onChange:value="OnNumberValueChanged($newValue)"/>
                        Input stepper (Disabled)
                        <InputStepper min="1" max="50" onChange:value="OnNumberValueChanged($newValue)" disabled="true"/>
                        Labeled Input stepper
                        <LabeledInputStepper label="'Label'" min="1" max="50" sync:value="labeledStepperValue" onChange:value="OnNumberValueChanged($newValue)"/>
                        Labeled Input stepper (Disabled)
                        <LabeledInputStepper label="'Label'" min="1" max="50" sync:value="labeledStepperValue" onChange:value="OnNumberValueChanged($newValue)" disabled="true"/>
                    </Div>
                </Group>

                <Group style="m4">
                    <Div style:PreferredWidth="300">
                        Select (Default)
                        <Select defaultValue="activities[0].Value" options="activities"/>
                        Select (Default Disabled)
                        <Select defaultValue="activities[0].Value" options="activities" disabled="true"/>
                        Select (Small)
                        <Select attr:variant="small" defaultValue="activities[0].Value" options="activities"/>
                        Select (Small Disabled)
                        <Select attr:variant="small" defaultValue="activities[0].Value" options="activities" disabled="true"/>
                    </Div>
                </Group>

                <Group style="m4">
                    Primary
                    <ToggleGroup style="mb3" attr:variant="primary">
                        <ToggleGroupItem text="'Left'"/>
                        <ToggleGroupItem text="'Middle'"/>
                        <ToggleGroupItem text="'Right'"/>
                    </ToggleGroup>

                    Primary (Disabled)
                    <ToggleGroup style="mb3" attr:disabled="true">
                        <ToggleGroupItem text="'Left'"/>
                        <ToggleGroupItem text="'Middle'"/>
                        <ToggleGroupItem text="'Right'"/>
                    </ToggleGroup>

                    Secondary
                    <ToggleGroup style="mb3" attr:variant="secondary">
                        <ToggleGroupItem text="'Left'"/>
                        <ToggleGroupItem text="'Middle'"/>
                        <ToggleGroupItem text="'Right'"/>
                    </ToggleGroup>

                    Secondary (Disabled)
                    <ToggleGroup style="mb3" attr:variant="secondary" attr:disabled="true">
                        <ToggleGroupItem text="'Left'"/>
                        <ToggleGroupItem text="'Middle'"/>
                        <ToggleGroupItem text="'Right'"/>
                    </ToggleGroup>

                    Multi-select
                    <ToggleGroup style="mb3" attr:variant="primary" multiSelectMode="true">
                        <ToggleGroupItem text="'Left'"/>
                        <ToggleGroupItem text="'Middle'"/>
                        <ToggleGroupItem text="'Right'"/>
                    </ToggleGroup>

                    Radio Button Group
                    <RadioButtonGroup style="mb3">
                        <LabeledRadioButton label="'Item 1'"/>
                        <LabeledRadioButton label="'Item 2'"/>
                        <LabeledRadioButton label="'Item 3'"/>
                        <LabeledRadioButton label="'Item 4'"/>
                    </RadioButtonGroup>

                    Radio Button Group (Disabled)
                    <RadioButtonGroup style="mb3" attr:disabled="true">
                        <LabeledRadioButton label="'Item 1'"/>
                        <LabeledRadioButton label="'Item 2'"/>
                        <LabeledRadioButton label="'Item 3'"/>
                        <LabeledRadioButton label="'Item 4'"/>
                    </RadioButtonGroup>

                </Group>

                <Group style="row">
                    Ignore the ugly shadow for now :)
                    <SimpleTooltip style="mr" title="'Simple Tooltip'"/>

                    <Tooltip style="mr" title="'Description Tooltip'">
                        <Text style="p">Tooltip description text</Text>
                    </Tooltip>
                </Group>



                <Group>

                    Default List
                    <Div style="list-container" style:PreferredWidth="300" style:BackgroundColor="UnityEngine.Color.white">

                        <ItemList label="'Ingredients'" items="items">
                            <ListItem icon="$item.Icon">
                                <Text style="h6">{$item.Name}</Text>
                                <Checkbox/>
                            </ListItem>
                        </ItemList>

                        <Separator style="list-separator"/>

                        <ItemList label="'Ingredients'" items="items">
                            <ListItem icon="$item.Icon">
                                <Text style="h6">{$item.Name}</Text>
                                <Checkbox/>
                            </ListItem>
                        </ItemList>

                    </Div>
                    Dense List
                    <Div style="list-container" style:PreferredWidth="300" style:BackgroundColor="UnityEngine.Color.white">

                        <ItemList label="'Ingredients'" items="items" attr:variant="dense">
                            <ListItem icon="$item.Icon">
                                <Text style="h6">{$item.Name}</Text>
                                <Checkbox/>
                            </ListItem>
                        </ItemList>

                        <Separator style="list-separator"/>
                        <ItemList label="'Ingredients'" items="items" attr:variant="dense">
                            <ListItem icon="$item.Icon">
                                <Text style="h6">{$item.Name}</Text>
                                <Checkbox/>
                            </ListItem>
                        </ItemList>
                    </Div>

                    Dense Striped List
                    <Div style="list-container" style:PreferredWidth="300" style:BackgroundColor="UnityEngine.Color.white">

                        <ItemList label="'Ingredients'" items="items" attr:variant="dense+striped">
                            <ListItem icon="$item.Icon">
                                <Text style="h6">{$item.Name}</Text>
                                <Checkbox/>
                            </ListItem>
                        </ItemList>
                    </Div>

                </Group>

                <Group>

                    <Notification title="'Notification Title'" description="'Notification Description Notification Description Notification Description Notification Description'"
                                  attr:variant="primary" actionIcon="$element.application.ResourceManager.GetTexture('Icons/star')" onActionClicked="actionClick" onClose="click"/>
                    <Notification title="'Notification Title'" description="'Notification Description Notification Description Notification Description Notification Description'"
                                  attr:variant="secondary" actionIcon="$element.application.ResourceManager.GetTexture('Icons/star')" onActionClicked="actionClick"
                                  onClose="click"/>
                    <Notification title="'Notification Title'" description="'Notification Description Notification Description Notification Description Notification Description'"
                                  attr:variant="success" actionIcon="$element.application.ResourceManager.GetTexture('Icons/star')" onActionClicked="actionClick" onClose="click"/>
                    <Notification title="'Notification Title'" description="'Notification Description Notification Description Notification Description Notification Description'"
                                  attr:variant="danger" actionIcon="$element.application.ResourceManager.GetTexture('Icons/star')" onActionClicked="actionClick" onClose="click"/>
                    <Notification title="'Notification Title'" description="'Notification Description Notification Description Notification Description Notification Description'"
                                  attr:variant="warning" actionIcon="$element.application.ResourceManager.GetTexture('Icons/star')" onActionClicked="actionClick" onClose="click"/>
                    <Notification title="'Notification Title'" description="'Notification Description Notification Description Notification Description Notification Description'"
                                  attr:variant="info" actionIcon="$element.application.ResourceManager.GetTexture('Icons/star')" onActionClicked="actionClick" onClose="click"/>

                </Group>

                Button (Primary)
                <Group style="row">
                    <Button attr:variant="primary" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="primary" label="'Hello'"/>
                    <Button attr:variant="primary" icon="'Icons/star'"/>

                    <Button attr:variant="primary" attr:size-variant="medium" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="primary" attr:size-variant="medium" label="'Hello'"/>
                    <Button attr:variant="primary" attr:size-variant="medium" icon="'Icons/star'"/>

                    <Button attr:variant="primary" attr:size-variant="large" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="primary" attr:size-variant="large" label="'Hello'"/>
                    <Button attr:variant="primary" attr:size-variant="large" icon="'Icons/star'"/>
                </Group>

                Button (Primary+Disabled)
                <Group style="row">
                    <Button attr:variant="primary" attr:disabled="true" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="primary" attr:disabled="true" label="'Hello'"/>
                    <Button attr:variant="primary" attr:disabled="true" icon="'Icons/star'"/>

                    <Button attr:variant="primary" attr:disabled="true" attr:size-variant="medium" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="primary" attr:disabled="true" attr:size-variant="medium" label="'Hello'"/>
                    <Button attr:variant="primary" attr:disabled="true" attr:size-variant="medium" icon="'Icons/star'"/>

                    <Button attr:variant="primary" attr:disabled="true" attr:size-variant="large" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="primary" attr:disabled="true" attr:size-variant="large" label="'Hello'"/>
                    <Button attr:variant="primary" attr:disabled="true" attr:size-variant="large" icon="'Icons/star'"/>
                </Group>

                Button (Secondary)
                <Group style="row">
                    <Button attr:variant="secondary" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="secondary" label="'Hello'"/>
                    <Button attr:variant="secondary" icon="'Icons/star'"/>

                    <Button attr:variant="secondary" attr:size-variant="medium" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="secondary" attr:size-variant="medium" label="'Hello'"/>
                    <Button attr:variant="secondary" attr:size-variant="medium" icon="'Icons/star'"/>

                    <Button attr:variant="secondary" attr:size-variant="large" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="secondary" attr:size-variant="large" label="'Hello'"/>
                    <Button attr:variant="secondary" attr:size-variant="large" icon="'Icons/star'"/>
                </Group>

                Button (Secondary+Disabled)
                <Group style="row">
                    <Button attr:variant="secondary" attr:disabled="true" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="secondary" attr:disabled="true" label="'Hello'"/>
                    <Button attr:variant="secondary" attr:disabled="true" icon="'Icons/star'"/>

                    <Button attr:variant="secondary" attr:size-variant="medium"  attr:disabled="true" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="secondary" attr:size-variant="medium" attr:disabled="true" label="'Hello'"/>
                    <Button attr:variant="secondary" attr:size-variant="medium" attr:disabled="true" icon="'Icons/star'"/>

                    <Button attr:variant="secondary" attr:size-variant="large" attr:disabled="true" label="'Hello'" icon="'Icons/star'"/>
                    <Button attr:variant="secondary" attr:size-variant="large" attr:disabled="true" label="'Hello'"/>
                    <Button attr:variant="secondary" attr:size-variant="large" attr:disabled="true" icon="'Icons/star'"/>
                </Group>

                <Group style="row">
                    <Checkbox/>
                    <Checkbox isChecked.once="true"/>
                    <Checkbox isChecked.once="true" isMixed="true"/>
                </Group>

                <Group style="row">
                    <RadioButton/>
                    <RadioButton/>
                    <RadioButton isChecked.once="true"/>
                    <RadioButton isChecked.once="true"/>
                    <RadioButton attr:disabled="true" isChecked.once="true"/>
                    <RadioButton attr:disabled="true"/>
                </Group>

                <Group style="row">
                    <LabeledRadioButton label="'Label'"/>
                    <LabeledRadioButton attr:disabled="true" label="'Label'"/>
                </Group>

                <Group style="row">
                    <LabeledCheckbox label="'Label'"/>
                    <LabeledCheckbox label="'Long label'" isChecked.once="true"/>
                    <LabeledCheckbox label="'Super long label this is crazy please dont do this'" isChecked.once="true" isMixed="true"/>
                </Group>

                <Group style="small-padded">
                    // Slider default
                    <Slider rangeStart="0" rangeEnd="10"/>
                </Group>

                <Group style="small-padded">
                    // Slider With Trail
                    <Slider showTrail.once="true" rangeStart.once="0" rangeEnd.once="10" stepSize.once="2" value.once="7.6f"/>

                </Group>
                <Group style="row small-padded">
                    <Div style:PreferredWidth="300">
                        // Slider [wide] With Trail and Steps (Steps need adjusting)
                        <Slider style="fill-parent-width"
                                showStepTicks="true"
                                useBothHandles.once="true"
                                showTrail.once="true"
                                rangeStart.once="0"
                                rangeEnd.once="10"
                                stepSize.once="2"
                                value.once="7.6f"/>
                    </Div>
                </Group>
                <Group style="margin-tb">
                    Toggle Switch (Big)
                    <ToggleSwitch/>
                </Group>

                <Group style="margin-tb">
                    Toggle Switch (Big) Disabled - Off
                    <ToggleSwitch attr:disabled="true"/>
                </Group>

                <Group style="margin-tb">
                    Toggle Switch (Big) Disabled - On
                    <ToggleSwitch attr:disabled="true" value="true"/>
                </Group>

                <Group style="margin-tb">
                    Toggle Switch (Small)
                    <ToggleSwitchSmall/>
                </Group>

                <Group style="margin-tb">
                    Toggle Switch (Small) Disabled -- Off
                    <ToggleSwitchSmall attr:disabled="true"/>
                </Group>

                <Group style="margin-tb">
                    Toggle Switch (Small) Disabled -- On
                    <ToggleSwitchSmall attr:disabled="true" value="true"/>
                </Group>

                <Group style="margin-tb" style:backgroundColor="UnityEngine.Color.white">
                    Progress bar thin
                    <ProgressBar color="SeedLib.ThemeColors.apple500" progress="0.5"/>
                    <ProgressBar color="SeedLib.ThemeColors.apple500" progress="0.25"/>
                    <ProgressBar color="SeedLib.ThemeColors.apple500" progress="0"/>
                    <ProgressBar color="SeedLib.ThemeColors.apple500" progress="1"/>
                </Group>

                <Group style="margin-tb" style:backgroundColor="UnityEngine.Color.white">
                    Progress bar thick
                    <ProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="0.5"/>
                    <ProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="0.25"/>
                    <ProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="0"/>
                    <ProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="1"/>
                </Group>

                <Group style="margin-tb" style:backgroundColor="UnityEngine.Color.white">
                    Progress bar with label
                    <LabeledProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="0.5"/>
                    <LabeledProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="0.25"/>
                    <LabeledProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="0.352521"/>
                    <LabeledProgressBar attr:variant="thick" color="SeedLib.ThemeColors.poppy500" progress="5"/>
                </Group>

            </override:Children>

        </ScrollView>

    </Contents>

</UITemplate>