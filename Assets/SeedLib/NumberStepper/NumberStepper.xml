<UITemplate>
    <Style path="SeedLib/NumberStepper/NumberStepper.style" />
    <Style path="SeedLib/InputField/InputField.style" />
    <Style src="SeedLib/SeedLibTheme.style"/>

    <Contents>

        <Group style="stepper-container">
            <Input attr:id="input-element"
                   sync:value="value"
                   onChange:value="InputValueChanged()"
                   style="input h6 stepper-input"
                   placeholder="placeholder"
                   disabled="disabled"
                   key:down="OnKeyPressed($event)"
                   key:heldDown.focus="OnKeyHeldDownWithFocus($event)"
                   onSubmit="Submit()"
            />

            <Group style="arrows">
                <Div style="arrow-box arrow-up" mouse:Down="Increment($event)" mouse:heldDown="IncrementContinuously($event)">
                    <Image style="arrow-icon" />
                </Div>
                <Div style="arrow-box arrow-down" mouse:Down="Decrement($event)" mouse:heldDown="DecrementContinuously($event)">
                    <Image style="arrow-icon" />
                </Div>
            </Group>
        </Group>

    </Contents>
</UITemplate>